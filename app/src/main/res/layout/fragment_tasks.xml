<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newTask"
            type="com.pierrejacquier.olim.data.Task" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/tasksCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pierrejacquier.olim.fragments.TasksFragment">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progress_view"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_height="80dp"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />

        <!-- TasksList -->
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/tasksNestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/container_margin"
                android:layout_marginRight="@dimen/container_margin"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- Tasks -->
                <LinearLayout
                    android:id="@+id/overdueTasksLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/container_margin"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="@dimen/container_margin"
                        android:layout_marginRight="@dimen/container_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/overdue"
                            android:textColor="@color/colorSecondaryText" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/postponeAllOverdueTasksImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/container_margin"
                                android:contentDescription="@string/postpone_all"
                                app:srcCompat="@drawable/ic_timelapse" />

                            <ImageView
                                android:id="@+id/markAsDoneAllOverdueTasksImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/done_all"
                                app:srcCompat="@drawable/ic_done_all" />

                        </LinearLayout>

                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/overdueTasksCard"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        card_view:cardBackgroundColor="@color/cardsbg"
                        card_view:cardCornerRadius="@dimen/card_corner_radius"
                        card_view:cardElevation="@dimen/cards_elevation">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/overdueTasksRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:scrollbars="none" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/todayTasksLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/container_margin"
                    android:layout_marginTop="@dimen/container_margin"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="@dimen/container_margin"
                        android:layout_marginRight="@dimen/container_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/today"
                            android:textColor="@color/colorSecondaryText" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/postponeAllTodayTasksImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/container_margin"
                                android:contentDescription="@string/postpone_all"
                                app:srcCompat="@drawable/ic_timelapse" />

                            <ImageView
                                android:id="@+id/markAsDoneAllTodayTasksImageView"
