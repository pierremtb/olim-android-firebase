<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/colorSecondaryText</item>
    </style>

    <style name="ActionButtonStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorSecondaryText</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
    <!-- Background for the search query section (e.g. EditText)-->
    <item name="queryBackground">@color/transparent</item>
    <!-- Background for the actions section (e.g. voice, submit)-->
    <item name="submitBackground">@color/colorSecondaryText</item>
    <!-- Close button icon -->
    <item name="closeIcon">@color/colorSecondaryText</item>
    <!-- Search button icon -->
    <item name="searchIcon">@color/colorSecondaryText</item>
    <!-- Go/commit button icon -->
    <item name="goIcon">@color/colorSecondaryText</item>
    <!-- Voice search button icon -->
    <item name="voiceIcon">@color/colorSecondaryText</item>
    <!-- Commit icon shown in the query suggestion row -->
    <item name="commitIcon">@color/colorSecondaryText</item>
</style>

    <style name="commonListItemStyle"></style>

</resources>
